</tr>
	<% _.forEach(users, function(user) { %>
        <tr>
			<td><%= user.login%></td>
			<td><%= user.nickname%></td>
        <td><%= user.robot_name%></td>
        <td><%= user.gold_coin%></td>
        <td><%= user.diamond%></td>
        <td><%= user.skill_point%></td>
        <td><%= user.status%></td>
        <!--<td><%= user.is_online%></td>-->
        <td><%= user.fight_info.total%></td>
        <td><%= user.fight_info.win%></td>
        <td><%= user.fight_info.fail%></td>
        <td><%= user.equipment_cards.main_weapon%></td>
        <td><%= user.equipment_cards.assist_weapon%></td>
        <td><%= user.equipment_cards.engine_body%></td>
        <td><%= user.equipment_cards.accessory%></td>
        <td><%= user.active_skill_cards%></td>
        <td><%= user.passive_skill_cards%></td>
        <td><%= user.my_cards%></td>
        </tr>
<% }) %>
